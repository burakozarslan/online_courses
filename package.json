{
  "name": "online_courses",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "echo 'Set SEED_INSTRUCTOR_EMAIL and SEED_INSTRUCTOR_PASSWORD env vars first' && NODE_ENV=production tsx prisma/seed.ts",
    "verify:env": "node scripts/verify-env.js",
    "verify:db": "node scripts/test-db-connection.js",
    "docker:dev": "docker-compose up --build",
    "docker:build": "docker build -f Dockerfile.prod -t online-courses-prod .",
    "docker:start": "docker run -p 3000:3000 online-courses-prod"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.562.0",
    "media-chrome": "^4.17.2",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-player": "^3.4.0",
    "stripe": "^20.1.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "vitest-mock-extended": "^3.1.0"
  }
}
